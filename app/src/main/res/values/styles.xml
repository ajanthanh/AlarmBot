<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#3F51B5</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
    </style>

    <!--Alarm Detail Activity-->
    <style name="ActiveDaysBtn">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/active_day_toggle_btn</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="custom_toolbar_buttons">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="customSpinner" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/alarm_detail_text_size</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@null</item>
    </style>

    android:textSize="@dimen/alarm_detail_text_size"
    android:layout_gravity="right"
    android:gravity="right"
    android:entries="@array/repeat_weekly_options"
    android:background="@null"
    style="@android:style/Theme.Holo.Light.DarkActionBar"

</resources>
