<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#455A64</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#263238</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!--Alarm Detail Activity-->
    <style name="ActiveDaysBtn">
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
        <item name="android:background">@drawable/active_day_toggle_btn</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="custom_toolbar_buttons">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/action_bar_dark</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="customSpinner" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/alarm_detail_text_size</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomBetterPickersRadialTimePickerDialog">
        <item name="bpMainColor1">@color/custom_tp_main1</item>
        <item name="bpMainColor2">@color/custom_tp_main2</item>
        <item name="bpAccentColor">@color/custom_tp_accent</item>
        <item name="bpMainTextColor">@color/custom_tp_text</item>
        <item name="bpDoneTextColor">@color/custom_tp_text</item>
        <item name="bpLineColor">@color/custom_tp_main2</item>
        <item name="bpDoneBackgroundColor">@drawable/tp_done_background_color</item>
        <item name="bpSelectionAlpha">102</item>
    </style>

</resources>
