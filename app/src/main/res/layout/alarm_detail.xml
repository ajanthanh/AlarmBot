<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/custom_toolbar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            style="@style/custom_toolbar_buttons"
            android:text="Save"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            style="@style/custom_toolbar_buttons"
            android:text="Cancel"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_toolbar"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 20 2015"
                android:textSize="@dimen/alarm_detail_text_size"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="DATE"
                    android:textSize="@dimen/alarm_detail_text_size"/>

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#C0C0C0" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/activeDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/activeDaySunday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="S"
                        android:textOn="S"/>

                    <ToggleButton
                        android:id="@+id/activeDayMonday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="M"
                        android:textOn="M"/>

                    <ToggleButton
                        android:id="@+id/activeDayTuesday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="T"
                        android:textOn="T"/>

                    <ToggleButton
                        android:id="@+id/activeDayWednesday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="W"
                        android:textOn="W"/>

                    <ToggleButton
                        android:id="@+id/activeDayThursday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="T"
                        android:textOn="T"/>

                    <ToggleButton
                        android:id="@+id/activeDayFriday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="F"
                        android:textOff="F"/>

                    <ToggleButton
                        android:id="@+id/activeDaySaturday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="S"
                        android:textOff="S"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/alarm_detail_settings_margin"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:id="@+id/repeatWeeklyFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/alarm_detail_text_size"
                        android:text="Repeat weekly" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/repeatWeekly"
                        android:layout_alignParentRight="true"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/alarm_detail_settings_margin"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/alarmTypeFragment">

                        <TextView
                            android:layout_width="wrap_content"

                            android:textSize="@dimen/alarm_detail_text_size"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Alarm Type" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/alarmType"
                            android:entries="@array/alarm_type_options"
                            style="@style/customSpinner"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="@dimen/alarm_detail_settings_margin"
                        android:paddingBottom="@dimen/alarm_detail_settings_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/volumeFragment">

                        <SeekBar
                            android:id="@+id/volume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:paddingTop="@dimen/alarm_detail_settings_margin"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/alarm_detail_text_size"
                        android:text="Tone"/>
                    <TextView
                        android:id="@+id/alarmTone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:textSize="@dimen/alarm_detail_text_size"
                        android:text="Alarm Tone 1"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="@dimen/alarm_detail_settings_margin"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snooze"

                            android:textSize="@dimen/alarm_detail_header_size"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/alarm_detail_text_size"
                            android:text="Snooze discriptions blah blah blah"/>

                    </LinearLayout>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/snooze"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:paddingTop="@dimen/alarm_detail_settings_margin"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smart Alarm"

                            android:textSize="@dimen/alarm_detail_header_size"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/alarm_detail_text_size"
                            android:text="Smart Alarm discriptions blah blah blah"/>

                    </LinearLayout>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/smartAlarm"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</RelativeLayout>