<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <Button
            android:id="@+id/save"
            style="@style/custom_toolbar_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/cancel"
            style="@style/custom_toolbar_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_toolbar"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 20 2015"
                android:textSize="@dimen/alarm_detail_text_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="DATE"
                    android:textSize="@dimen/alarm_detail_text_size" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:text="12:00"
                android:gravity="center"
                android:textSize="60dp"/>

            <TextView
                android:id="@+id/amPm"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="AM"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activeDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/activeDaySunday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="S"
                        android:textOn="S" />

                    <ToggleButton
                        android:id="@+id/activeDayMonday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="M"
                        android:textOn="M" />

                    <ToggleButton
                        android:id="@+id/activeDayTuesday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="T"
                        android:textOn="T" />

                    <ToggleButton
                        android:id="@+id/activeDayWednesday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="W"
                        android:textOn="W" />

                    <ToggleButton
                        android:id="@+id/activeDayThursday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="T"
                        android:textOn="T" />

                    <ToggleButton
                        android:id="@+id/activeDayFriday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="F"
                        android:textOn="F" />

                    <ToggleButton
                        android:id="@+id/activeDaySaturday"
                        style="@style/ActiveDaysBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="S"
                        android:textOn="S" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/repeatWeeklyFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:paddingTop="@dimen/alarm_detail_settings_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Repeat weekly"
                        android:textSize="@dimen/alarm_detail_text_size" />

                    <Switch
                        android:id="@+id/repeatWeekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"

                    android:paddingTop="@dimen/alarm_detail_settings_margin">

                    <LinearLayout
                        android:id="@+id/alarmTypeFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alarm Type"
                            android:textSize="@dimen/alarm_detail_text_size" />

                        <Spinner
                            android:id="@+id/alarmType"
                            style="@style/customSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/alarm_type_options" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/volumeFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/alarm_detail_settings_margin"
                        android:paddingTop="@dimen/alarm_detail_settings_margin">

                        <SeekBar
                            android:id="@+id/volume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:paddingTop="@dimen/alarm_detail_settings_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Tone"
                        android:textSize="@dimen/alarm_detail_text_size" />

                    <TextView
                        android:id="@+id/alarmTone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:text="Alarm Tone 1"
                        android:textSize="@dimen/alarm_detail_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:paddingTop="@dimen/alarm_detail_settings_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snooze"

                            android:textSize="@dimen/alarm_detail_header_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Snooze discriptions blah blah blah"
                            android:textSize="@dimen/alarm_detail_text_size" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/snooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/alarm_detail_settings_margin"
                    android:paddingTop="@dimen/alarm_detail_settings_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smart Alarm"

                            android:textSize="@dimen/alarm_detail_header_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Smart Alarm discriptions blah blah blah"
                            android:textSize="@dimen/alarm_detail_text_size" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/smartAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>